{
  "name": "wwbam-quiz-host-panel",
  "private": true,
  "version": "0.13.1",
  "type": "module",
  "scripts": {
    "build:viz": "pnpm dlx vite-bundle-visualizer --report dist/stats.json --output dist/bundle-visualizer.html",
    "build": "vite build",
    "deploy:firebase": "pnpm build && firebase deploy --only hosting",
    "dev:emulator": "firebase emulators:start --only auth,database --import=./emulator-data --export-on-exit & pnpm exec wait-on http://127.0.0.1:4000 && open http://127.0.0.1:4000/database/wwbam-quiz/data && wait",
    "dev": "concurrently -n EMU,VITE -c blue,green \"pnpm dev:emulator\" \"infisical run -- vite\"",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:import": "firebase emulators:start --only auth,database --import=./emulator-data",
    "emulator:erase": "rm -rf emulator-data",
    "format": "prettier --write \"./**/*.{html,js,jsx,json,css,ts,tsx}\"",
    "generate-jsconfig": "node tools/generate-jsconfig.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "update-tree": "node tools/update-tree.js",
    "update-version": "node tools/update-version.js && pnpm install && pnpm format && pnpm update-tree"
  },
  "dependencies": {
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.8.0",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "firebase-tools": "^15.5.1",
    "globals": "^16.0.0",
    "ora": "^8.2.0",
    "prettier": "^3.5.3",
    "semver": "^7.7.2",
    "terser": "^5.39.2",
    "tw-animate-css": "^1.3.0",
    "vite": "^6.3.5",
    "vite-plugin-minify": "^2.1.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
