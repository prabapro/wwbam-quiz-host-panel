{
  "rules": {
    "allowed-hosts": {
      ".read": "auth != null",
      ".write": false
    },
    "question-sets": {
      ".read": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()",
      ".write": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()",
      "$setId": {
        ".validate": "newData.hasChildren(['set-id', 'set-name', 'questions', 'uploaded-at'])"
      }
    },
    "game-state": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()"
    },
    "teams": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()",
      "$teamId": {
        ".validate": "newData.hasChildren(['name', 'participants', 'contact'])"
      }
    },
    "prize-structure": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()"
    },
    "config": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('allowed-hosts').child(auth.uid).exists()"
    }
  }
}
